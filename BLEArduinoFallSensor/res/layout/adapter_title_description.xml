<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/adapter_text_attribute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_toStartOf="@+id/adapter_text_right_info"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/adapter_text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_text_attribute"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@+id/adapter_text_right_info"
        android:fontFamily="sans-serif"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/adapter_text_right_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/adapter_text_info"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textSize="16sp" />

</RelativeLayout>